@model IEnumerable< Model.TeamMembers>

@{
    ViewBag.Title = "IsPlaying";
}

<h2>IsPlaying</h2>
<p>
    @*Welcome : @ViewBag.Username [@ViewBag.Role]*@
    @Html.ActionLink("Edit", "CaptainEdit", null, new { @class = "btn btn-primary" })

</p>
<table class="table">
    <tr>
        <th>
            Sr.No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalMatchesPlayed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.IsSelected)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.IsPlaying)
        </th>
        <th></th>
    </tr>
    @{ int i = 1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @( i++)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalMatchesPlayed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.IsSelected)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IsPlaying)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>
